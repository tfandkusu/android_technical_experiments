<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTheme"
        android:name=".feature.main.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.jnta.JetpackNavigationTransitionAnimationActivity"
            android:label="@string/jetpack_navigation_transition_animation"
            android:theme="@style/Theme.MyTheme" />

        <activity
            android:name=".feature.keyboard.SoftKeyboardExperimentActivity"
            android:label="@string/jetpack_navigation_transition_animation"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.MyTheme" />

        <activity-alias
            android:name=".feature.jnta.JetpackNavigationTransitionAnimationActivityAlias"
            android:targetActivity=".feature.jnta.JetpackNavigationTransitionAnimationActivity" />
    </application>

</manifest>